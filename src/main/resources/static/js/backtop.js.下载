document.writeln("<script type=\"text/javascript\">");
document.writeln("$(document).ready(function () {");
document.writeln("        var bt = $(\'#toolBackTop\');");
document.writeln("        var sw = $(document.body)[0].clientWidth;");
document.writeln("");
document.writeln("        var limitsw = (sw - 1060) / 2 - 230;");
document.writeln("        if (limitsw > 0){");
document.writeln("                limitsw = parseInt(limitsw);");
document.writeln("                bt.css(\"right\",limitsw);");
document.writeln("        }");
document.writeln("");
document.writeln("        $(window).scroll(function() {");
document.writeln("                var st = $(window).scrollTop();");
document.writeln("                if(st > 30){");
document.writeln("                        bt.show();");
document.writeln("                }else{");
document.writeln("                        bt.hide();");
document.writeln("                }");
document.writeln("        });");
document.writeln("})");
document.writeln("</script>");
document.writeln("<style>");
document.writeln(".back-to {bottom:60px;overflow:hidden;position:fixed;right:10px;z-index:999;}");
document.writeln(".back-to .back-top:hover {background-position: -50px 0;}");
document.writeln("</style>");
document.writeln("<div style=\"display:none;\" class=\"back-to\" id=\"toolBackTop\"><a title=\"返回顶部\" onclick=\"window.scrollTo(0,0);return false;\" href=\"#top\" class=\"back-top\">返回顶部</a></div>");