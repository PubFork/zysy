//search-toggle
searchToggle2 = function()
{
	if($('.box3').parent().attr('title') == '切换至360搜索')
	{
		$('.box3').css('background','rgb(255, 255, 255) url("http://www.dilidili.wang/newimages/search_baidu_pink.png") no-repeat scroll 50% 50% / auto padding-box border-box');
		$('.search_box2').hide();
		$('#so360').show();
		$('.box3').parent().attr('title','切换至百度搜索');
	}
	else
	{
		$('.box3').css('background','rgb(255, 255, 255) url("http://www.dilidili.wang/newimages/search_360_pink.png") no-repeat scroll 50% 50% / auto padding-box border-box');
		$('#so360').hide();
		$('.search_box2').show();
		$('.box3').parent().attr('title','切换至360搜索');
	}
}


$(document).ready(function() {
$.ajax({
    url: "/tooltipster/tooltipster.bundle.js",
    dataType: "script",
    }).done(function(){   
        $(document).ready(function() {
            $('.tooltip').tooltipster({
		theme: 'tooltipster-shadow',
		side: 'right',
		maxWidth: 152,
		maxHeight: 215,
		interactive: true,
		contentAsHTML: true,
		distance: -5,
    		});
        });
    });




//360so
$('.search_box2').after('<div id="so360" class="fr"><form action="http://www.so.com/s" target="_blank" id="so360form"><input type="text" autocomplete="off" name="q" id="so360_keyword" placeholder="搜索感兴趣的动漫"><input type="submit" id="so360_submit" value=""><input type="hidden" name="ie" value="utf8"><input type="hidden" name="src" value="zz_www.dilidili.wang"><input type="hidden" name="site" value="www.dilidili.wang"><input type="hidden" name="rg" value="1"></form></div>');
$('.w1410 #so360').after('<a onclick="searchToggle2()" title="切换至360搜索" class="fr"><i class="box3"></i></a>');

});



$(window).load(function(){

//log&register
